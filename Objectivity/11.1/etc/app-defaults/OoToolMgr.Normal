ootoolmgr*helpPanel*helpIndexRegion.width:			500
ootoolmgr*helpPanel*helpTopicRegion.height:			400
ootoolmgr*helpPanel*helpTopicRegion*topicPresenterLabel*fontList:                 -*-helvetica-bold-r-normal--14-*
ootoolmgr*helpPanel*helpTopicRegion*fontList:                 -*-times-medium-r-normal--12-*=times-normal,                 -*-times-bold-r-normal--12-*=times-bold,	         -*-times-medium-i-normal--12-*=times-italic,	         -*-times-medium-r-normal--8-*=times-small,                 -*-helvetica-bold-r-normal--14-*=helv-large,                 -*-courier-medium-r-normal--12-*=courier-normal
