ootoolmgr*typePanel*typeContentRegion.height:			400
ootoolmgr*typePanel*typeContentRegion*typePresenterLabel*fontList:                 -*-helvetica-bold-r-normal--14-*
ootoolmgr*typePanel*typeContentRegion*fontList:                 -*-times-bold-r-normal--14-*=type-font,                 -*-times-medium-r-normal--14-*=name-font,                 -*-helvetica-medium-r-normal--14-*=normal-font,	         -*-times-medium-i-normal--14-*=value-font

